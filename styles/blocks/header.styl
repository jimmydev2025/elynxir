.header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    padding: 22px 35px 0;
    z-index: 99;

    &__version {
        position: absolute;
        top: -4px;
        left: 100%;
        font-size: 11px;
        line-height: 1.4;
        letter-spacing: 0;
        margin-left: 5px;
    }

    &__container {
        display: flex;
        justify-content: center;
        position: relative;
    }

    &__logo {
        position: absolute;
        left: 0;
        top: -16px;
        color: $c1;
        line-height: 0;
        opacity: 1;
        transition: opacity $duration $duration;
    }

    &__burger {
        width: 52px;
        height: 30px;
        background-color: transparent;
        border: none;
        padding: 0;
        position: relative;
        color: $c1;
        display: none;
        margin-left: auto;
        z-index: 10;
        opacity: 1;
        transition: opacity $duration $duration;

        span {
            display: block;
            position: absolute;
            width: 52px;
            height: 1px;
            top: 50%;
            left: 50%;
            margin-left: -26px;
            background-color: currentColor;
            transition: margin $duration $duration, transform $duration;

            &:first-child {
                margin-top: -5px;
            }

            &:last-child {
                margin-top: 4px;
            }
        }
    }
}

