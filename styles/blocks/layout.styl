.wrapper {
    display: flex;
    flex-flow: column nowrap;
    width: 100%;
    min-height: 100%;
    overflow: hidden;
    position: relative;
    z-index: 2;
}

.is-debug {
    .wrapper * {
        // display: none;
        pointer-events: none !important;
    }

    .nav__item {
        a {
            pointer-events: auto !important;
        }
    }
}

.main {
	verticalStretch()
}

.canvas {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.nowrap {
    display: inline-block;
    vertical-align: top;
    white-space: nowrap;
}

.sound {
    position: fixed;
    bottom: 18px;
    right: 35px;
    z-index: 12;
    color: $c1;
    width: 52px;
    line-height: 0;
    box-sizing: content-box;

    &__icon {
        width: 100%;
        height: auto;

        &-waves {
            opacity: 1;
            transition: opacity $duration;    
        }

        &-cross {
            opacity: 0;
            transition: opacity $duration;    
        }
    }

    &.is-muted {
        .sound {
            &__icon {
                &-waves {
                    opacity: 0;
                }

                &-cross {
                    opacity: 1;
                }
            }
        }
    }
}

.is-hidden {
	display: none;
}

.svg-icon {
    fill: currentColor;
}

.cursor {
    position: fixed;
    top: 0;
    left: 0;
    pointer-events: none;
    opacity: 1;
    visibility: visible;
    transition: opacity .3s;
    width: 43px;
    height: 43px;
    margin: -21px 0 0 -21px;
    z-index: 9999;
    background: url(../images/cursor-top.svg) 50% 0 no-repeat, url(../images/cursor-bottom.svg) 50% 100% no-repeat;
    transition: height $duration, margin $duration;

    &.is-hover {
        height: 47px;
        margin: -23px 0 0 -21px;
    }
}

@media $small {
    .sound {
        width: 44px;
        bottom: 10px;
        right: 20px;
    }

    .cursor {
        display: none;
    }
}

.lil-gui-materials {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    z-index: 10;
    // overflow-y: auto;
}

.lil-gui.root {
    --width: 350px;
    height: 100%;
}

.copy-settings {
    position: fixed;
    top: 50%;
    left: 50%;
    z-index: 11;
    transform: translate(-50%, -50%);
    width: 800px;
    height: 800px;
    display: none;
    background-color: #fff;

    &__close {
        position: absolute;
        top: 10px;
        right: 10px;
        width: 26px;
        height: 26px;
        cursor: pointer;
        background-color: #000;
        border-radius: 3px;

        &::before,
        &::after {
            position: absolute;
            top: 12px;
            left: 5px;
            width: 16px;
            height: 2px;
            background-color: #fff;
            transition: background-color .3s ease;
            content: '';
        }

        &::before {
            transform: rotate(45deg);
        }

        &::after {
            transform: rotate(-45deg);
        }

        &:hover::before,
        &:hover::after {
            background-color: #fff;
        }
    }

    &__content {
        font-family: Arial, sans-serif;
        font-size: 11px;
        padding: 20px;
        color: #000;
        overflow-y: auto;
        flex-grow: 1;
    }

    &.is-visible {
        display: flex;
    }
}