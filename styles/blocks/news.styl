@media $small {
	.news-card {
		display: block;

		&__box {
			position: relative;
			padding-bottom: 51.5%;
			margin-bottom: 25px;
		}

		&__image {
			transform: scale(1);
			// filter: blur(5px);
		}

		&__title {
			font-size: 18px;
			letter-spacing: 0.12em;
			margin: 0 0 4px;
		}

		&__text {
			font-size: 14px;
			line-height: 23px;
		}

		&.is-active {
			color: $c1;

			.news-card {
				&__image {
					// filter: blur(0px);

					&-wrap {
						img {
							opacity: 1;
						}
					}
				}
			}
		}
	}
}

@media $xsmall {
	.news-card {
		&__box {
			margin-bottom: 20px;
		}
		
		&__title {
			font-size: 18px;
			margin: 0 0 10px;
		}

		
	}
}