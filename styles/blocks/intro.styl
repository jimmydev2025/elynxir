.intro {
	position: fixed;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	z-index: 3;

	display: flex;
	align-items: center;
	justify-content: center;

	visibility: visible;
	opacity: 1;
	background-color: #000;

	&__controls {
		position: relative;
		visibility: hidden;
		opacity: 0;
		line-height: 0;
		
		&::before {
			content: '';
			display: block;
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			width: 360px;
			height: 596px;
			background: url(../images/intro-bg.png) 50% 50% no-repeat;
			background-size: auto 100%;
		}
	}

	&__button {
		pointer-events: none;
	}

	&__link {
		display: inline-block;
		position: absolute;
		top: 100%;
		left: 50%;
		transform: translateX(-50%);
		margin-top: 22px;
		font-size: 12px;
		font-weight: 300;
		line-height: 1.2;
		letter-spacing: 0.13em;
		color: #878787;
		text-transform: uppercase;
		text-decoration: underline;
		white-space: nowrap;
		opacity: 0;
		visibility: hidden;
		transition: color $duration, opacity $duration;
	}

	&__video {
		position: fixed;
		top: 0;
		right: 0;
		bottom: 0;
		left: 0;
		z-index: 4;
		display: flex;
		align-items: center;
		justify-content: center;
		display: none;
		background-color: #000;
		align-items: center;
		justify-content: center;
		
		video {
			display: block;
			// width: 100%;
			// height: 100%;
			// object-fit: cover;
		}

		&.is-active {
			display: flex;
		}
	}

	&.is-hidden {
		display: flex;
		visibility: hidden;
		opacity: 0;
	}
}

@media $desktop {
	.intro {
		transition: opacity .3s ease;
		
		&__video {
			transition: visibility 0s .3s ease, opacity .3s ease;
		}

		&__link {
			&:hover {
				color: $c1;
			}
		}
	}
}

@media $xsmall {
	.intro {
		&__video {
			video {
				width: 50%;
				height: 50%;
			}
		}

		&__button {
			width: 270px;
			font-size: 14px;
		}

		&__link {
			font-size: 10px;
		}
	}
}