.news-card {
	display: block;
	color: $c8;
	margin-right: 12%;
	transform: translateY(100px);
	opacity: 0;
	transition: opacity $duration, transform $duration, color $duration;
	transition-delay: calc((var(--slide-index) * 0.2s) + 1s);

	&__box {
		position: relative;
		padding-bottom: 51.5%;
		margin-bottom: 40px;
	}

	&__image {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		line-height: 0;
		transform: scale(.8);
		transform-origin: center;
		padding: 1px;
		background-color: #000;
		border-radius: 0 20px 0 20px;
		overflow: hidden;
		transition: transform $duration;
		// transition: transform $duration, filter $duration;

		&::before {
			content: '';
			display: block;
			position: absolute;
			width: 100%;
			height: 100%;
			top: 0;
			left: 0;
			background: linear-gradient(90deg, alpha($c1, .12) 0%, alpha($c1, 1) 100%);
		}

		&-wrap {
			background-color: #000;
			position: absolute;
			top: 1px;
			left: 1px;
			right: 1px;
			bottom: 1px;
			border-radius: 0 20px 0 20px;
			overflow: hidden;
			z-index: 2;

			img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				opacity: 0.5;
				transition: opacity $duration;
			}
		}

	}
	

	&__main {
		.word {
            display: inline-block;
            transform: translateY(100%);
            opacity: 0;
            transition: opacity $duration, transform $duration;
            transition-delay: calc((var(--word-total) - var(--word-index)) * 0.1s);
        }

        a {
        	color: inherit;
        	border-bottom: 1px solid rgba(255,255,255,0.3);
        }
	}

	&__title {
		font-family: $fontE;
		font-size: 22px;
		line-height: 30px;
		letter-spacing: 0.08em;
		margin: 0 0 13px;
	}

	&__text {
		font-size: 15px;
		line-height: 30px;
		letter-spacing: 0.12em;

		.word {
            transition-delay: calc((var(--word-total) - var(--word-index)) * 0.05s);
        }
	}
}

@media $desktop {
	.news-card {
		&:hover {
			color: $c1;

			.news-card {
				&__image {
					transform: scale(1,1);

					&-wrap {
						img {
							opacity: 1;
						}
					}
				}
			}
		}
	}

