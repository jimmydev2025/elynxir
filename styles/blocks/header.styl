@media $small {
    .header {
        padding: 8px 20px 0;

        &__container {
            justify-content: flex-start;
            align-items: center;
        }

        &__logo {
            width: 140px;
            position: relative;
            z-index: 10;
            top: 0;
        }

        &__nav {
            display: flex;
            position: fixed;
            width: 100%;
            height: 100%;
            background: url(../images/nav-bg.jpg) 50% 0 no-repeat;
            background-size: cover;
            bottom: 100%;
            left: 0;
            transform: translateY(0);
            z-index: 9;
            padding: 100px 20px;
            overflow-y: auto;
            transition: transform $duration;
        }

        &__burger {
            display: block;
        }
    }

    .header-panel {
        height: 46px;

        &::before,
        &::after {
            bottom: auto;
            height: 45px;
        }

        &::before {
            left: 0;
            width: 20px;
        }

        &::after {
            left: 96px;
            right: 0;
        }

        &__logo {
            left: 20px;
            width: 76px;
            height: 76px;
            padding-top: 6px;
            border-radius: 0 0 12px 12px;

            .svg-icon {
                width: 42px;
                height: auto;
            }

            &::before,
            &::after {
                height: 46px;
            }
        }
    }
}

@media $xsmall {
    .header {
        padding: 8px 20px 0;
    }
